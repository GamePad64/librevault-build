FROM fedora:24
RUN dnf install -y gcc gcc-c++ rpm-build rpmdevtools dnf-plugins-core make cpp git
RUN mkdir /opt/build-dir
VOLUME /opt/build-dir
WORKDIR /opt/build-dir
RUN git clone https://github.com/Librevault/librevault.git && ls && echo 'ls .' && ls .. && echo 'ls ..'
WORKDIR /opt/build-dir/librevault
RUN cd /opt/build-dir/librevault && ls . && echo 'up dir' && ls ..
RUN git submodule update --init
RUN mkdir docker-build
COPY ./ docker-build/
ENTRYPOINT docker-build/makerpm.sh
